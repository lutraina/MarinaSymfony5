{% extends 'baseAdmin.html.twig' %}

{% block title %}Categorias{% endblock %}

{% block body %}
    <h1>Categorias</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categoria.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ categoria.nom }}</td>
                
                {% for cat in categoria.Produtos %}
					{% if cat.nom %}
					    <td>{{ cat.nom }}</td>  
					{% endif %}
				{% endfor %}
							    
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_categorias_index') }}">back to list</a>

    <a href="{{ path('admin_categorias_edit', {'id': categoria.id}) }}">edit</a>

    {{ include('admin/admin_categorias/_delete_form.html.twig') }}
{% endblock %}
