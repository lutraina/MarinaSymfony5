{% extends 'baseAdmin.html.twig' %}

{% block title %}Pages{% endblock %}

{% block body %}
    <h1>Pages</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ page.nom }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ page.title }}</td>
            </tr>
            <tr>
                <th>Visibility_flag</th>
                <td>{{ page.visibilityFlag ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ page.description }}</td>
            </tr>
            <tr>
                <th>Nom_route</th>
                <td>{{ page.nomRoute }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_pages_index') }}">back to list</a>

    <a href="{{ path('admin_pages_edit', {'id': page.id}) }}">edit</a>

    {{ include('admin/admin_pages/_delete_form.html.twig') }}
{% endblock %}
