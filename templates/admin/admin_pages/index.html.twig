{% extends 'baseAdmin.html.twig' %}

{% block title %}Pages index{% endblock %}

{% block body %}
    <h1>Pages index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Title</th>
                <th>Visibility_flag</th>
                <th>Description</th>
                <th>Nom_route</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.id }}</td>
                <td>{{ page.nom }}</td>
                <td>{{ page.title }}</td>
                <td>{{ page.visibilityFlag ? 'Yes' : 'No' }}</td>
                <td>{{ page.description }}</td>
                <td>{{ page.nomRoute }}</td>
                <td>
                    <a href="{{ path('admin_pages_show', {'id': page.id}) }}">show</a>
                    <a href="{{ path('admin_pages_edit', {'id': page.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_pages_new') }}">Create new</a>
{% endblock %}
